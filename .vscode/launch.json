    "version": "0.2.0",
    "configurations": [
        {
        "type": "node",
        "request": "launch",
        "name": "Mocha Tests",
        "program": "${workspaceFolder}/lambda/node_modules/mocha/bin/_mocha",
        "args": [
            "-u",
            "tdd",
            "--timeout",
            "999999",
            "--colors",
            "${workspaceFolder}/lambda/test"
        ],
        "internalConsoleOptions": "openOnSessionStart",
        "env": {
            "AWS_REGION" : "eu-west-1",
            "AWS_PROFILE" : "maxi80"
        }
    }
    ]
}